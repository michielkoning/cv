<!-- capture the CSS content as a Nunjucks variable -->
{% set css %}
{% include "style.css" %}
{% endset %}
<!-- feed it through our cssmin filter to minify -->

<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <style>
      {{css | cssmin | safe}}
    </style>

    <title>{{ title }} | Michiel Koning</title>
    <meta name="description" value="Werkervaring en opleidingen van Michiel Koning"/>
  </head>
  <body>
    <header>
      <h1>
        {{ title }}
      </h1>
    </header>
    <main>
      {{ content | safe }}
    </main>
  </body>
</html>